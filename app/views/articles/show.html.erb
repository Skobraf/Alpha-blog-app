<h1>Showing selected article</h1>

<p>
	Title: <%= @article.title%>
</p>
<ul class="listing">
		<div class="row">
		<div class="well col-md-4 col-md-offset-4">
			<li>
				<%= link_to @article.user.username, user_path(@article.user) %>
			</li>
			<li>
				<small>
					<%= pluralize(@article.user.articles.count, "article") if @article.user.articles %>
				</small>
			</li>
		</div>
		</div>
	</ul>
<p>
	Description: <%= simple_format(@article.description) %>
</p>
<% if logged_in? && (current_user == @article.user && current_user.admin? )%>
<%= link_to 'Edit', edit_article_path(@article), class: "btn btn_xs btn_primary" %>
<%= link_to "delete this article", articles_path(@article), method: :delete,
data: {confirm: "Are you sure?"},,
class: "btn btn-xs btn-success" %>
<% end %>
<%= link_to "View all articles", articles_path, class: "btn btn-xs btn-success" %>